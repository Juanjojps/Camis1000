<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProducto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen_detalle_producto"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/nombre_detalle_producto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/imagen_detalle_producto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nombre del Producto" />

        <TextView
            android:id="@+id/precio_detalle_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/nombre_detalle_producto"
            app:layout_constraintStart_toStartOf="@id/nombre_detalle_producto"
            tools:text="€49.99" />

        <TextView
            android:id="@+id/descripcion_detalle_producto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/precio_detalle_producto"
            app:layout_constraintStart_toStartOf="@id/nombre_detalle_producto"
            app:layout_constraintEnd_toEndOf="@id/nombre_detalle_producto"
            tools:text="Esta es una descripción larga y detallada del producto, explicando sus materiales, calidad, y por qué es una excelente compra." />

        <Button
            android:id="@+id/boton_anadir_al_carrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Añadir al carrito"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/descripcion_detalle_producto"
            app:layout_constraintStart_toStartOf="@id/nombre_detalle_producto"
            app:layout_constraintEnd_toEndOf="@id/nombre_detalle_producto"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
